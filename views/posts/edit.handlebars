<div class="center">
  <form action="/post/{{result.id}}/edit" method="post" class="form-horizontal">
    <div class="form-group">
      <input type="text" name="title" id="title" class="form-control" placeholder="Title" value={{result.title}}>
    </div>

    <div class="form-group">
      <textarea name="description" id="description" cols="30" rows="10" class="form-control" placeholder="Description...">{{result.description}}</textarea>
    </div>

    <div class="form-group">
      <input type="submit" value="Edit" class="btn btn-lg btn-success">
    </div>
  </form>
</div>