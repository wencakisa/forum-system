<h2>{{result.title}}</h2>
<p>{{result.description}}</p>
<p>Posted on {{result.postedOn}}</p>

<h3>
  {{result.views}} <span class="glyphicon glyphicon-eye-open"></span>
</h3>
<h3>
  {{result.likes}}
  <form action="/post/{{result.id}}/like" method="post" id="like-form"></form>
  <a href="javascript:document.getElementById('like-form').submit()">
    <span class="glyphicon glyphicon-thumbs-up"></span>
  </a>
</h3>