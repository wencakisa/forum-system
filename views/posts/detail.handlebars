<h2>{{result.title}}</h2>
<p>{{result.description}}</p>
<p>Posted on {{result.postedOn}}</p>

<h3>
  {{result.views}} <span class="glyphicon glyphicon-eye-open"></span>
  {{result.likes}}
  <form action="/posts/{{result.id}}/like" method="post" id="like-form"></form>
  <a href="javascript:document.getElementById('like-form').submit()">
    <span class="glyphicon glyphicon-thumbs-up"></span>
  </a>
</h3>

{{#if result.canBeUpdated}}
  <a href="/posts/{{result.id}}/edit" class="btn btn-md btn-warning">Edit</a>
  <form action="/posts/{{result.id}}/delete" method="post" id="delete-post-form"></form>
  <a href="javascript:alert('Are you sure?'); document.getElementById('delete-post-form').submit()" class="btn btn-md btn-danger">Delete</a>
{{/if}}